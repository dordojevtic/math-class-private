---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import WhyPrivate from '../components/WhyPrivate.astro';
import Benefits from '../components/Benefits.astro';
import Contact from '../components/Contact.astro';

const siteTitle = "Privatni Časovi Matematike - Kaluđerica, Beograd";
const siteDescription = "Besplatan probni čas matematike za učenike od 1. do 8. razreda. Individualan pristup, fleksibilno zakazivanje. Kaluđerica, Beograd.";
---

<Layout title={siteTitle} description={siteDescription}>
  <Hero />
  <About />
  <WhyPrivate />
  <Benefits />
  <Contact />
</Layout>

<style is:global>
  @import '../styles/global.css';
</style>